<%= form_with(model: paciente) do |form| %>
    <% if paciente.errors.any? %>
        <div style="color: red">
            <h2><%= pluralize(paciente.errors.count, "error") %> Proibe o paciente de ser salvo</h2>
            <ul>
                <% paciente.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

  <div>
    <%= form.label :nome_completo, "Nome do Paciente", style: "display: block" %>
    <%= form.text_field :nome_completo %>
  </div>

  <div>
    <%= form.label :data_nascimento %>
    <%= form.date_select(:data_nascimento, :start_year => 1900, :end_year =>2023) %>
  </div>

  <div>
    <%= form.label :cpf %>
    <%= form.text_field :cpf %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :telefone %>
    <%= form.text_field :telefone %>
  </div>

  <%= form.fields_for :endereco do |f| %>

    <div clfieass="ld">
      <%= f.label :cep %>
      <%= f.text_field :cep %>
    </div>

    <div class="field">
      <%= f.label :cidade %>
      <%= f.text_field :cidade %>
    </div>

    <div class="field">
      <%= f.label :bairro %>
      <%= f.text_field :bairro %>
    </div>

    <div class="field">
      <%= f.label :logradouro %>
      <%= f.text_field :logradouro %>
    </div>

    <div class="field">
      <%= f.label :complemento %>
      <%= f.text_field :complemento %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Salvar" %>
    <%= link_to "Voltar para a pÃ¡gina inicial", root_path %>
  </div>
<% end %>
